{
    "plugins": [
        "security"
    ],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended",
        "plugin:security/recommended",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "rules": {
        "camelcase": "off",
        "comma-dangle": ["error", "never"],
        "no-console": "off",
        "import/extensions": ["error", "always"],
        "indent": ["error", 4],
        "linebreak-style": ["error", "windows"],
        "max-len": "off",
        "no-multiple-empty-lines": ["error", { "max": 2, "maxEOF": 0 }],
        "object-curly-newline": ["error", {"ObjectExpression": {"multiline": true}, "ImportDeclaration": {"multiline": true}}],
        "operator-assignment": ["error", "never"],
        "padded-blocks": "off",
        "quotes": ["error", "double"]
    }
}